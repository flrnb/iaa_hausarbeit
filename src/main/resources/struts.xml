<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
		"http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>


	<package name="default" extends="tiles-default" namespace="/">
		<action name="ShowMainMenu" class="de.nak.iaa.web.view.action.ShowMainMenuAction">
			<result type="tiles">mainMenu</result>
		</action>
		
		<action name="ShowHeaderMenuAction" class="de.nak.iaa.web.view.action.HeaderMenuAction">
			<result>/parts/headerMenu.jsp</result>
		</action>
	</package>

	<package name="OralExams" extends="tiles-default" namespace="/OralExams">
		<action name="show" class="de.nak.iaa.web.view.action.OralExamsAction"
			method="show">
			<result name="success" type="tiles">showOralResults</result>
		</action>
		<action name="save" class="de.nak.iaa.web.view.action.OralExamsAction"
			method="save">
			<result name="success" type="tiles">saveOralResults</result>
			<result name="input" type="tiles">showOralResults</result>
			<!-- <result name="input" type="redirectAction">
				<param name="actionName">show</param>
				<param name="namespace">/OralExams</param>
			</result> -->
		</action>
	</package>
</struts>